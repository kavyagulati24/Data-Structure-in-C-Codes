#include <stdio.h>
#include <stdlib.h>
#include <string.h>

#define MAX 50

struct Patient {
    int id;
    char name[50];
};

struct Patient queue[MAX];
int front = -1, rear = -1;


int isEmpty() {
    return (front == -1 || front > rear);
}


int isFull() {
    return (rear == MAX - 1);
}


void addPatient() {

    if (isFull()) {
        printf("Queue is full! Cannot add more patients.\n");
        return;
    }

    struct Patient p;

    printf("Enter Patient ID: ");
    scanf("%d", &p.id);

    printf("Enter Patient Name: ");
    scanf("%s", p.name);

    if (front == -1)
        front = 0;

    rear++;
    queue[rear] = p;

    printf("Patient added successfully.\n");
}


void viewNextPatient() {

    if (isEmpty()) {
        printf("No patients in queue.\n");
        return;
    }

    printf("Next Patient to be treated:\n");
    printf("ID: %d | Name: %s\n",
           queue[front].id,
           queue[front].name);
}


void servePatient() {

    if (isEmpty()) {
        printf("No patients to serve.\n");
        return;
    }

    printf("Serving Patient:\n");
    printf("ID: %d | Name: %s\n",
           queue[front].id,
           queue[front].name);

    front++;

    if (front > rear) {
        front = rear = -1;  // Reset queue
    }
}


void displayPatients() {

    if (isEmpty()) {
        printf("No patients waiting.\n");
        return;
    }

    printf("\nWaiting Patients List:\n");

    for (int i = front; i <= rear; i++) {
        printf("ID: %d | Name: %s\n",
               queue[i].id,
               queue[i].name);
    }
}

int main() {

    int choice;

    do {
        printf("\n--- Clinic Appointment System ---\n");
        printf("1. Add New Patient\n");
        printf("2. View Next Patient\n");
        printf("3. Serve Patient\n");
        printf("4. Display Waiting Patients\n");
        printf("5. Exit\n");
        printf("Enter choice: ");
        scanf("%d", &choice);

        switch(choice) {

            case 1:
                addPatient();
                break;

            case 2:
                viewNextPatient();
                break;

            case 3:
                servePatient();
                break;

            case 4:
                displayPatients();
                break;

            case 5:
                printf("Exiting system...\n");
                break;

            default:
                printf("Invalid choice!\n");
        }

    } while(choice != 5);

    return 0;
}
