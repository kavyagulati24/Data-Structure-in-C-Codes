#include <stdio.h>

#define MAX 100

// ----------- Linear Search -----------
int linearSearch(int arr[], int n, int key) {
    for(int i = 0; i < n; i++) {
        if(arr[i] == key)
            return i;   // return index if found
    }
    return -1;  // not found
}

// ----------- Binary Search -----------
int binarySearch(int arr[], int low, int high, int key) {
    while(low <= high) {
        int mid = (low + high) / 2;

        if(arr[mid] == key)
            return mid;
        else if(arr[mid] < key)
            low = mid + 1;
        else
            high = mid - 1;
    }
    return -1;  // not found
}

// ----------- Main Function -----------
int main() {
    int arr[MAX], n, key, choice, result;

    printf("Enter number of elements: ");
    scanf("%d", &n);

    printf("Enter elements:\n");
    for(int i = 0; i < n; i++)
        scanf("%d", &arr[i]);

    printf("Enter element to search: ");
    scanf("%d", &key);

    printf("\nChoose Searching Method:\n");
    printf("1. Linear Search\n");
    printf("2. Binary Search (Array must be sorted)\n");
    printf("Enter choice: ");
    scanf("%d", &choice);

    switch(choice) {
        case 1:
            result = linearSearch(arr, n, key);
            break;
        case 2:
            result = binarySearch(arr, 0, n-1, key);
            break;
        default:
            printf("Invalid choice!");
            return 0;
    }

    if(result != -1)
        printf("Element found at index %d\n", result);
    else
        printf("Element not found\n");

    return 0;
}
